<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PRIMER_PARCIAL.TU_NUMERO_ES">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="ESCRIBE ACÁ TU RESULTADO" HorizontalTextAlignment="Center" TextColor="Black" FontSize="20"/>
            <Label Text="" HorizontalTextAlignment="Center" TextColor="Black" FontSize="20"/>

            <Entry x:Name="escribir"
             VerticalOptions="Center"
             HorizontalOptions="Center"
             WidthRequest="100"/>

            <Button x:Name="CALCULAR"
            Text="CALCULAR"
            VerticalOptions="Center"
            HorizontalOptions="Center"/>

            <Label Text="" HorizontalTextAlignment="Center" TextColor="Red" FontSize="20"/>
            <Label Text="" HorizontalTextAlignment="Center" TextColor="Red" FontSize="20"/>

            <Label Text="EL NUMERO QUE ESTAS PENSANDO APARECERÁ ACÁ" HorizontalTextAlignment="Center" TextColor="Red" FontSize="20"/>

            <Entry x:Name="FINAL" HorizontalTextAlignment="Center" TextColor="Blue" FontSize="36"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>